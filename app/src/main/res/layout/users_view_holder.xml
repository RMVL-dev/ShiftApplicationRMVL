<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/view_holder_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/vh_preview_pict"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        tools:src = "@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/vh_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "mrs Deborah"

        android:layout_toEndOf="@+id/vh_preview_pict"
        android:layout_alignTop="@+id/vh_preview_pict"
        />

    <TextView
        android:id="@+id/vh_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text = "Smith"
        android:layout_toEndOf="@+id/vh_preview_pict"
        android:layout_below="@+id/vh_first_name"
        />

    <TextView
        android:id="@+id/vh_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text = "7(901)280-14-05"
        android:layout_toEndOf="@+id/vh_preview_pict"
        android:layout_below="@+id/vh_last_name"
        />

    <TextView
        android:id="@+id/vh_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="Zhukova str"

        android:layout_toEndOf="@+id/vh_preview_pict"
        android:layout_below="@+id/vh_phone_number"
        />

</RelativeLayout>